{
  "name": "codewars-testing",
  "version": "1.0.0",
  "description": "A project to test Codewars challenges",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "mocha --recursive --spec 'src/tests/**/*.test.js'",
    "test:watch": "nodemon --exec \"npm test\" --watch src --ext js,jsx",
    "test:example-descriptive": "mocha 'src/tests/example-descriptive.test.js'",
    "test:example-descriptive:watch": "nodemon --exec \"npm run test:example-descriptive\" --watch src --ext js,jsx"    
  },
  "devDependencies": {
    "@codewars/test-compat": "^1.0.0",
    "@eslint/js": "^9.11.1",
    "chai": "^5.1.1",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "mocha": "^10.0.0",
    "nodemon": "^3.1.7"
  },
  "author": "SeegersJT"
}
